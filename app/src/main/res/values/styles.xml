<resources>

    <style name="word_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScoreButtons" parent="android:Widget.Button">
        <item name="android:tint">@color/pink</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:contentDescription">@string/plus_button_description</item>
    </style>
    <style name="PlusButtons" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_plus</item>
        <item name="android:contentDescription">@string/plus_button_description</item>
    </style>
    <style name="MinusButtons" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_minus</item>
        <item name="android:contentDescription">@string/minus_button_description</item>
    </style>

    <style name="ScoreText">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="TeamText">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>
</resources>
