<com.amazon.euclid.widget.ZParallaxBackground xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:euclid="http://schemas.android.com/apk/res/euclid"
    xmlns:amazon="http://schemas.android.com/apk/res/amazon"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.amazon.euclid.widget.ZContainer
            android:id="@+id/content_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            euclid:autoPadding="true">

            <com.amazon.euclid.widget.ZHeaderNavigationBar xmlns:amazon="http://schemas.android.com/apk/res/amazon"
                android:id="@+id/zheadernavigationbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                amazon:headerSubtitle="@string/zheadernavbar_action_1_title"
                amazon:headerTitle="@string/title_activity_main"
                amazon:upNavigationEnabled="true"
                euclid:layout_depth="wrap_content"
                euclid:widgetTheme="@euclid:style/Theme.Euclid.Dark" />
        </com.amazon.euclid.widget.ZContainer>

        <com.amazon.euclid.widget.ZShadowReceiver
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            euclid:shadowDepth="@euclid:dimen/globalLayerScreen">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.amazon.euclid.widget.ZContainer
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    euclid:layout_depth="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <com.amazon.euclid.widget.ZTabBar
                        android:id="@+id/ztabbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        euclid:layout_depth="wrap_content"
                        amazon:animateAddRemove="true"
                        amazon:defaultHeight="50dp"
                        euclid:widgetTheme="@euclid:style/Theme.Euclid.Light">

                        <com.amazon.euclid.widget.ZTabBarItem
                            android:id="@+id/ztabbaritem1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            euclid:layout_depth="wrap_content"
                            amazon:badgeText="1"
                            android:text="Top stories"
                            euclid:vbl="glyphs"
                            euclid:iconScene="@euclid:string/glyph_new" />

                        <com.amazon.euclid.widget.ZTabBarItem
                            android:id="@+id/ztabbaritem2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            euclid:layout_depth="wrap_content"
                            amazon:badgeText="2"
                            android:text="Tech news"
                            euclid:vbl="glyphs"
                            euclid:iconScene="@euclid:string/glyph_call" />

                        <com.amazon.euclid.widget.ZTabBarItem
                            android:id="@+id/ztabbaritem3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            euclid:layout_depth="wrap_content"
                            amazon:badgeText="3"
                            android:text="Cooking"
                            euclid:vbl="glyphs"
                            euclid:iconScene="@euclid:string/glyph_discard" />

                    </com.amazon.euclid.widget.ZTabBar>

                </com.amazon.euclid.widget.ZContainer>

                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tabContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </com.amazon.euclid.widget.ZShadowReceiver>
    </LinearLayout>
</com.amazon.euclid.widget.ZParallaxBackground>